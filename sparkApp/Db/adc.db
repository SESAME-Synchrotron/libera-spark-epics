record(ao, "$(PREFIX):ADC:Size")
{
	field(PINI, "YES")
	field(VAL,  "$(SIZE)")
	field(SCAN, "1 second")
	field(DRVL, "1")
	field(DRVH, "$(MAX_SIZE)")
}

record(waveform, "$(PREFIX):ADC")
{
	field(PINI, "YES")
	field(SCAN, "1 second")
	field(DISA, "1")
	field(DTYP, "stream")
	field(INP,  "@data.proto read_data(ADC,$(PREFIX):ADC:Size) $(PORT)")
	field(NELM, "$(BUFFER)")
	field(FTVL, "SHORT")
}

record(aSub, "$(PREFIX):ADC:SUB")
{
	field(PINI, "YES")
	field(SNAM, "split_4_way")
	field(INPA, "$(PREFIX):ADC CP") field(FTA,  "SHORT") field(NOA,  "$(BUFFER)")
	field(OUTA, "$(PREFIX):ADC:A")  field(FTVA, "SHORT") field(NOVA, "$(MAX_SIZE)")
	field(OUTB, "$(PREFIX):ADC:B")  field(FTVB, "SHORT") field(NOVB, "$(MAX_SIZE)")
	field(OUTC, "$(PREFIX):ADC:C")  field(FTVC, "SHORT") field(NOVC, "$(MAX_SIZE)")
	field(OUTD, "$(PREFIX):ADC:D")  field(FTVD, "SHORT") field(NOVD, "$(MAX_SIZE)")
}

