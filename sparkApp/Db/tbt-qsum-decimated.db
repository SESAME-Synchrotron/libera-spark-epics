record(ao, "$(PREFIX):TBT_QSUM_DEC:Size")
{
	field(PINI, "YES")
	field(VAL,  "$(SIZE)")
	field(SCAN, "1 second")
	field(DRVL, "1")
	field(DRVH, "$(MAX_SIZE)")
}

record(waveform, "$(PREFIX):TBT_QSUM_DEC")
{
	field(PINI, "YES")
	field(SCAN, "1 second")
	field(DISA, "1")
	field(DTYP, "stream")
	field(INP,  "@data.proto read_data(TBT_QSUM_DEC,$(PREFIX):TBT_QSUM_DEC:Size) $(PORT)")
	field(NELM, "$(BUFFER)")
	field(FTVL, "SHORT")
}

record(aSub, "$(PREFIX):TBT_QSUM_DEC:SUB")
{
	field(PINI, "YES")
	field(SNAM, "split_2_way")
	field(INPA, "$(PREFIX):TBT_QSUM_DEC CP")  field(FTA,  "SHORT") field(NOA,  "$(BUFFER)")
	field(OUTA, "$(PREFIX):TBT_QSUM_DEC:Q")   field(FTVA, "SHORT") field(NOVA, "$(MAX_SIZE)")
	field(OUTB, "$(PREFIX):TBT_QSUM_DEC:SUM") field(FTVB, "SHORT") field(NOVB, "$(MAX_SIZE)")
}

record(waveform, "$(PREFIX):TBT_QSUM_DEC:Q")
{
	field(PINI, "YES")
	field(SCAN, "1 second")
	field(NELM, "$(MAX_SIZE)")
	field(FTVL, "SHORT")
}

record(waveform, "$(PREFIX):TBT_QSUM_DEC:SUM")
{
	field(PINI, "YES")
	field(SCAN, "1 second")
	field(NELM, "$(MAX_SIZE)")
	field(FTVL, "SHORT")
}

